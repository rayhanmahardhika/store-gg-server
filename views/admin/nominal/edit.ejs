<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Add</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Edit Nominal Form : <%= nominal.coinQuantity %> <%= nominal.coinName %></h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/nominal/edit/<%= nominal._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label>Coin Name</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="coinName"
                    required
                  >
                    <option selected="selected">Choose coin</option>
                    <option value="Gold"
                    <% if(nominal.coinName === "Gold") { %>
                        selected
                    <%}%>
                    >Gold</option>
                    <option value="Diamond"
                    <% if(nominal.coinName === "Diamond") { %>
                        selected
                    <%}%>
                    >Diamond</option>
                    <option value="Jewel"<% if(nominal.coinName === "Jewel") { %>
                        selected
                    <%}%>
                    >Jewel</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="coinQuantity">Coin Quantity</label>
                  <input
                    type="number"
                    class="form-control"
                    value="<%= nominal.coinQuantity %>"
                    id="coinQuantity"
                    name="coinQuantity"
                    placeholder="Enter amount"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="price">Price</label>
                  <input
                    type="number"
                    class="form-control"
                    value="<%= nominal.price %>"
                    id="price"
                    name="price"
                    placeholder="Enter prices"
                    required
                  />
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
